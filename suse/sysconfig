## Description: Keyserver Configuration

## Type: string
## Default: "production"
#
# This should always be set to "production".
#
NODE_ENV="production"

## Type: string
## Default: "info"
#
# Logging level to be printed to the system journal
#
LOG_LEVEL="info"

## Type: integer
## Default: 8085
#
# Port for the Node Express server to listen on
#
PORT=8085

## Type: boolean
## Default: true
#
# Automatically upgrade HTTPS requests to HTTP?
#
HTTPS_UPGRADE=true

## Type: string
## Default: base64_encoded_sha256
#
# TO-DO: EXPLAIN WHAT THIS DOES
#
HTTPS_KEY_PIN="base64_encoded_sha256"

## Type: string
## Default: base64_encoded_sha256
#
# TO-DO: EXPLAIN WHAT THIS DOES
#
HTTPS_KEY_PIN_BACKUP="base64_encoded_sha256"

## Type: string
## Default: "127.0.0.1:27017/keyserver"
#
# MongoDB connection URI in the format <host>:<port>/<database>
#
MONGO_URI="127.0.0.1:27017/keyserver"

## Type: string
## Default: ""
#
# MongoDB user to authenticate with, if authentication is required
#
MONGO_USER=""

## Type: string
## Default: ""
#
# Password for the MongoDB user specified with MONGO_USER
#
MONGO_PASS=""

## Type: string
## Default: "127.0.0.1"
#
# Hostname or IP address of the SMTP server to use for outgoing email
#
SMTP_HOST="127.0.0.1"

## Type: integer
## Default: 25
#
# Port to use for connection to the server specified with SMTP_HOST
#
SMTP_PORT=25

## Type: boolean
## Default: false
#
# Whether to use secure SMTP (SMTPS) for connection to the server specified with SMTP_HOST
# Not compatible with SMTP_STARTTLS!
#
SMTP_TLS=false

## Type: boolean
## Default: false
#
# Whether to use STARTTLS for connection to the server specified with SMTP_HOST
# Not comatible with SMTP_TLS!
#
SMTP_STARTTLS=false

## Type: boolean
## Default: true
#
# Whether to encrypt verification mails using PGP
#
SMTP_PGP=true

## Type: string
## Default: ""
#
# SMTP user to authenticate with, if authentication to the mail server is required
#
SMTP_USER=""

## Type: string
## Default: ""
#
# Password for the user specified with SMTP_USER
#
SMTP_PASS=""

## Type: string
## Default: "SUSE Key Server"
#
# Sender name to use for outgoing emails
#
SENDER_NAME="SUSE Key Server"

## Type: string
## Default: ""
#
# Sender email address to use for outgoing emails
#
SENDER_EMAIL=""

## Type: integer
## Default: 30
#
# For how long uploaded but unverified keys should be kept
#
PUBLIC_KEY_PURGE_TIME=30

